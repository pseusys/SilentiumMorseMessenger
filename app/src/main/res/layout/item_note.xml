<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/minimal_offset"
    android:layout_marginHorizontal="@dimen/minimal_offset"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/minimal_offset"
        android:layout_marginHorizontal="@dimen/minimal_offset">

        <TextClock
            android:id="@+id/date_time_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:format12Hour="dd.MM.yyyy hh:mm"
            android:format24Hour="dd.MM.yyyy hh:mm"
            android:text="12.00"
            android:textStyle="bold"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintBottom_toTopOf="@id/text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Note text"
            app:layout_constraintVertical_weight="4"
            app:layout_constraintBottom_toTopOf="@id/copy_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_time_view" />

        <Button
            android:id="@+id/send_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Send"
            style="@style/BorderlessButton"
            android:drawableEnd="@drawable/icon_send"
            app:layout_constraintVertical_weight="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/copy_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view" />

        <Button
            android:id="@+id/copy_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Copy"
            style="@style/BorderlessButton"
            android:drawableEnd="@drawable/icon_copy"
            app:layout_constraintVertical_weight="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/delete_button"
            app:layout_constraintStart_toEndOf="@id/send_button"
            app:layout_constraintTop_toBottomOf="@id/text_view" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Delete"
            style="@style/BorderlessButton"
            android:drawableEnd="@drawable/icon_delete"
            app:layout_constraintVertical_weight="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/copy_button"
            app:layout_constraintTop_toBottomOf="@id/text_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
